{
  "name": "1c-launcher-app",
  "version": "1.0.9",
  "description": "1C Launcher - кроссплатформенный лаунчер баз 1С",
  "main": "main.js",
  "author": "exdesign",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux AppImage --win portable",
    "dist-linux": "electron-builder --linux",
    "dist-win": "electron-builder --win portable",
    "dist-all": "electron-builder --linux AppImage --win portable"
  },
  "build": {
    "appId": "com.exdesign.1clauncher",
    "productName": "1C Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!**/*.log"
    ],
    "extraResources": [
      {
        "from": "fonts",
        "to": "fonts"
      },
      {
        "from": "icons",
        "to": "icons"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "category": "Utility",
      "executableName": "1c-launcher"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12"
  }
}
